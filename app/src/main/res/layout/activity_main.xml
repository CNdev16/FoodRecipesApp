<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.allrecipesfree_foodrecipesapp.ui.flow_country_categories_main.MainActivityViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ui.flow_country_categories_main.MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bg_toolbar"
            android:padding="1dp"
            app:titleTextColor="@color/colorWhite" />

        <View
            android:id="@+id/view"
            style="@style/ViewLine"
            android:layout_below="@+id/toolbar" />

        <TextView
            android:id="@+id/tvCountryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorWhite"
            android:gravity="left"
            android:paddingLeft="16dp"
            android:text="Select you country"
            android:textColor="#000"
            android:textSize="@dimen/text_size_24sp" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnNav"
            android:layout_below="@id/tvCountryName"
            android:orientation="horizontal" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/btnNav"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_back"
                android:rotation="180"
                app:layout_anchor="@id/bar" />

            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_gravity="bottom"
                android:backgroundTint="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btnFav"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_favorite_black_24dp"
                        android:gravity="center"
                        android:drawableTint="@color/colorWhite"
                        android:orientation="vertical"
                        android:text="@string/favorite"
                        android:textColor="@color/colorWhite">

                    </TextView>

                    <TextView
                        android:id="@+id/btnSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_search_black_24dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:text="@string/search"
                        android:drawableTint="@color/colorWhite"
                        android:textColor="@color/colorWhite">

                    </TextView>
                </LinearLayout>
            </com.google.android.material.bottomappbar.BottomAppBar>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="4dp">

            <include
                android:id="@+id/search"
                layout="@layout/layout_search_menu" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>