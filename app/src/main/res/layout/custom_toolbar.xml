<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLeft"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/round_arrow_back_black_18dp"
            android:tint="@color/colorBlack"
            android:visibility="gone"
            tools:tint="@color/colorBlack"
            tools:visibility="visible" />

        <TextView
            android:text="Header"
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/imgRight"
            android:layout_toRightOf="@id/imgLeft"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            tools:visibility="visible"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_28sp" />

        <RelativeLayout
            android:id="@+id/layoutInputSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:layout_toLeftOf="@id/imgRight"
            android:layout_toRightOf="@id/imgLeft"
            android:background="@drawable/bg_text_view_corners_redius"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <com.example.allrecipesfree_foodrecipesapp.utility.CustomEditText
                android:id="@+id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/imgClearText"
                android:background="#00000000"
                android:drawableTint="@color/colorBlack"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:gravity="center_vertical"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:paddingRight="8dp"
                android:paddingBottom="2dp"
                android:text="texxxxxxx"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/text_size_18sp" />

            <ImageView
                android:id="@+id/imgClearText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_clear_black_24dp"
                android:tint="@color/colorBlack"
                android:visibility="gone">

            </ImageView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgRight"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/round_search_black_18dp"
            android:tint="@color/colorBlack"
            android:visibility="invisible"
            tools:tint="@color/colorBlack"
            tools:visibility="visible" />

    </RelativeLayout>
</layout>